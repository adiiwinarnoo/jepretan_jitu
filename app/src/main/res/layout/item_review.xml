<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/image_profile_review"
        android:layout_width="35dp"
        android:layout_height="35dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@color/cardview_dark_background"/>

    <TextView
        android:id="@+id/username"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="5dp"
        android:text="username"
        android:textSize="12sp"
        android:maxLines="2"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="@id/image_profile_review"
        app:layout_constraintStart_toEndOf="@id/image_profile_review" />

    <TextView
        android:id="@+id/tv_review"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@id/ratingbar"
        app:layout_constraintStart_toStartOf="@id/username"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="jasa bagus, hasil foto terbaik dan profesional"/>

    <RatingBar
        android:id="@+id/ratingbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/username"
        app:layout_constraintStart_toStartOf="@id/username"
        android:stepSize="1"
        android:rating="3"
        android:scaleX="1.0"
        android:scaleY="1.0"
        android:isIndicator="true"
        android:padding="0dp"
        android:layout_marginTop="5dp"
        style="@style/Widget.AppCompat.RatingBar.Small" />

</androidx.constraintlayout.widget.ConstraintLayout>